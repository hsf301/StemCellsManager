<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/width_user_header_image"
            android:layout_height="@dimen/height_user_header_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_10"
            app:srcCompat="@mipmap/image_header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/btn_answer"
            android:layout_toRightOf="@+id/iv_header"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextGray12Sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/str_qa_date" />

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/TextGray12Sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_answer"
            style="@style/TextWhite10Sp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_blue_full"
            android:text="@string/btn_answer" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            style="@style/TextWhite12Sp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_question"
            android:gravity="center"
            android:text="é—®" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/TextBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="TextView"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>