<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_gray"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/width_interaction_image"
            android:layout_height="@dimen/height_interaction_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/TextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_image"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:text="TextView" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btn_view"
            style="@style/TextBlue12Sp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="@string/btn_view_review" />

        <View
            android:id="@+id/dot"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_alignRight="@+id/btn_view"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_dot_red" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_review" />

            <TextView
                android:id="@+id/tv_review"
                style="@style/TextGray12Sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="TextView" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>