<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgContainer"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:background="@drawable/bg_title">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/height_title"
            android:layout_height="@dimen/height_title"
            android:padding="@dimen/padding_all_back"
            app:srcCompat="@mipmap/icon_arrow_left_white" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_user_modify_password" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/width_login"
                android:layout_height="@dimen/height_login"
                android:layout_marginRight="@dimen/dp_10"
                app:srcCompat="@mipmap/icon_lock_gray" />

            <EditText
                android:id="@+id/et_oldpwd"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint="@string/hint_modify_pwd_old"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_white"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/width_login"
                android:layout_height="@dimen/height_login"
                android:layout_marginRight="@dimen/dp_10"
                app:srcCompat="@mipmap/icon_lock_gray" />

            <EditText
                android:id="@+id/et_pwd"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint="@string/hint_modify_pwd_new"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_white"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/width_login"
                android:layout_height="@dimen/height_login"
                android:layout_marginRight="@dimen/dp_10"
                app:srcCompat="@mipmap/icon_lock_gray" />

            <EditText
                android:id="@+id/et_repwd"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint="@string/hint_register_repwd"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_tips"
            style="@style/TextRed10Sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/TextWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login"
            android:enabled="false"
            android:text="@string/btn_confirm_modify" />

    </LinearLayout>
</LinearLayout>